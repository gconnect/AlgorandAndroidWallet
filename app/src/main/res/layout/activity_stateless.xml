<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.StatelessActivity">

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"
            />
        <Button
            android:id="@+id/compile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compile Teal Source"
            android:layout_margin="24dp"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/output"
            />

        <Button
            android:id="@+id/contract_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contract Account"
            android:layout_margin="24dp"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/compile"
            />

        <Button
            android:id="@+id/account_delegation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Delegation"
            android:layout_margin="24dp"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/contract_account"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
